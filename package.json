{
  "name": "bithumb-coin-collector",
  "version": "1.0.0",
  "description": "Bithumb API 기반 코인 데이터 수집 및 MySQL 저장 시스템",
  "main": "src/index.js",
  "bin": {
    "coin-collector": "./bin/coin-collector.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "daemon": "pm2 start ecosystem.config.js",
    "daemon-stop": "pm2 stop ecosystem.config.js",
    "daemon-restart": "pm2 restart ecosystem.config.js",
    "daemon-logs": "pm2 logs coin-collector",
    "daemon-status": "pm2 status",
    "test": "jest",
    "lint": "eslint src/ --fix",
