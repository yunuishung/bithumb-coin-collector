    "axios": "^1.6.0",
    "commander": "^11.1.0",
    "mysql2": "^3.6.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "dotenv": "^16.3.1",
    "cron": "^3.1.6",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.52.0",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=16.0.0"
